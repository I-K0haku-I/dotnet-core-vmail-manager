@model IEnumerable<mail_manager.Models.Accounts>

@{
    ViewData["Title"] = "Accounts";
}

<h1>Accounts</h1>

<div>
    <h4>List</h4>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quota)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enabled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sendonly)
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Username)<text>&#64</text>@Html.DisplayFor(model => item.Domain)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Quota)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Enabled)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Sendonly)
                </td>
            </tr>
}
        </tbody>
    </table>
</div>